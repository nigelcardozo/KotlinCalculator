<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <TextView
            android:id="@+id/tvCalcOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="123456789" />

    <GridLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:columnCount="4"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

        <Button
                android:id="@+id/btnNum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnNum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnNum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnOperatorMultiply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnNum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnNum5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnNum6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnOperatorDivide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnNum7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnNum8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnNum9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnOperatorAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnNum0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnDecimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnDecimal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnOperatorSubtract"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnAllClear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnBackSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/btnOperatorEquals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_columnSpan="1"
                android:textAllCaps="false"/>

    </GridLayout>

</android.support.constraint.ConstraintLayout>